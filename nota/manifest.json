{
  "manifest_version": 3,
  "name": "nota - 웹 캡처 & Markdown 메모 확장 도구",
  "version": "1.0.0",
  "description": "웹페이지에서 메모를 남기고, URL과 함께 Markdown(.md)으로 저장하는 오프라인 크롬 확장 프로그램.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 